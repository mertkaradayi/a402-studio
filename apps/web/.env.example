# ===========================================
# a402 Playground - Environment Variables
# ===========================================
# Copy this file to .env.local and fill in your values

# -----------------------------------------
# Beep SDK Configuration
# -----------------------------------------
# Get your publishable key from https://justbeep.it
NEXT_PUBLIC_BEEP_PUBLISHABLE_KEY=your-beep-publishable-key

# Beep API server URL (optional, defaults to production)
NEXT_PUBLIC_BEEP_SERVER_URL=https://api.justbeep.it

# -----------------------------------------
# Sui Network Configuration
# -----------------------------------------
# Default network: testnet or mainnet
NEXT_PUBLIC_SUI_NETWORK=testnet

# -----------------------------------------
# API Server Configuration
# -----------------------------------------
# Backend API URL for proxy and a402 routes
NEXT_PUBLIC_API_URL=http://localhost:3001
